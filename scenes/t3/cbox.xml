<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="loop">
		<integer name="shadow sample" value="1"/>
	</integrator>

	<camera type="perspective">
		<float name="fov" value="40"/>
		<transform name="toWorld">
			<scale value="1,1,1"/>
			<lookat target="0, 0.6, 0" origin="2, 1, 5" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="600"/>
		<integer name="width" value="800"/>
	</camera>
	
	<sampler type="independent">
		<integer name="sampleCount" value="4"/>
	</sampler>

	<mesh type="obj">
		<string name="filename" value="meshes/river.obj"/>

		<bsdf type="river">
			<color name="albedo" value="0.725 0.71 0.68"/>
			<float name="reflect" value="0.5"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="meshes/boat_half.obj"/>

		<bsdf type="bidiffuse"/>

        <transform name="local">
	        <matrix value="0.02, 0, 0, 0,
	        	0, 0.02, 0, -0.03,
	        	0, 0, 0.02, 0,
	        	0, 0, 0, 1.0"/>
	    </transform>
        <transform name="toWorld">
            <matrix value="-0.809, 0, -0.588, 1,
            	0, 1, 0, 0,
            	0.588, 0, -0.809, 1,
            	0, 0, 0, 1.0"/>
        </transform>
		<volumesurface type="volumesurfaceN">
			<string name="intMedia" value="fog"/>
			<string name="extMedia" value="fog"/>
		</volumesurface>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="meshes/cube.obj"/>
        <transform name="local">
	        <matrix value="2, 0, 0, -1,
	        	0, 4, 0, 0.0001,
	        	0, 0, -2.4, 1.1,
	        	0, 0, 0, 1.0"/>
	    </transform>
        <transform name="toWorld">
            <matrix value="-0.809, 0, -0.588, 1,
            	0, 1, 0, 0,
            	0.588, 0, -0.809, 1,
            	0, 0, 0, 1.0"/>
        </transform>
		<volumesurface type="volumesurfaceN">
			<string name="intMedia" value="fog"/>
		</volumesurface>
	</mesh>

	<volumemedia type="volumemediahetero">
		<string name="name" value="fog"/>
		<float name="albedo" value="0.1"/>
		<float name="theta_t" value="10.0"/>
        <transform name="toWorld">
            <matrix value="-0.809, 0, -0.588, 1,
            	0, 1, 0, 0,
            	0.588, 0, -0.809, 1,
            	0, 0, 0, 1.0"/>
        </transform>
        <transform name="local">
	        <matrix value="1.2, 0, 0, -0.47,
	        	0, 2, 0, -0.1,
	        	0, 0, -2.6, 1.3,
	        	0, 0, 0, 1.0"/>
	    </transform>
	    <string name="density" value="voxel/density.voxel"/>
	    <string name="flame" value="voxel/flame.voxel"/>
	    <string name="heat" value="voxel/heat.voxel"/>
	 	<color name="radiance" value="2 2 2"/>
	</volumemedia>

	<scenebox type="image-based-sphere">
		<point name="center" value="0, 0, 0"/>
		<float name="radius" value="10.0"/>
		<string name="light-image" value="meshes/glacier-small.exr"/>
		<float name="scale" value="0.8"/>
	</scenebox>

</scene>
